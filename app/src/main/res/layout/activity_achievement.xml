<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.example.jucc.summertraining.AchievementActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/activity_achievement_return"
            android:text="返"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/activity_achievement_littlefish"
            android:text="小鱼"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/activity_achievement_mediumfish"
            android:text="中鱼"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="@drawable/btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/activity_achievement_bigfish"
            android:text="大鱼"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="@drawable/btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

    </LinearLayout>

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/activity_achievement_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.ContentFrameLayout>

</LinearLayout>
