<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/activity_app_usage_titel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#3399ff"
        android:text="11111111" />

    <TextView
        android:id="@+id/activity_app_usage_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#22ff11"
        android:gravity="center"
        android:text="22222222" />

    <TextView
        android:id="@+id/activity_app_usage_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff111"
        android:gravity="right"
        android:text="333333333" />

</LinearLayout>