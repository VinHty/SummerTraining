<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:circle="http://schemas.android.com/apk/res/com.example.jucc.summertraining"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context="com.example.jucc.summertraining.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:orientation="vertical">

        <com.example.jucc.summertraining.CircleTimePiker
            android:id="@+id/circleSelect"
            android:layout_width="wrap_content"
            android:layout_height="312dp"
            circle:circle_center_radius="0"
            circle:circle_center_color="#FFFF3500"
            circle:circle_point_width="0"
            circle:circle_point_color="#FF00FFFF"
            circle:circle_target_radius="25"
            circle:circle_target_color="#4169E1"
            />
        <TextView
            android:id="@+id/circleSelectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <Button
            android:id="@+id/start_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starttiming" />


    </LinearLayout>


    <LinearLayout
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:orientation="horizontal"
        android:id="@+id/circleselect">
    <Button
        android:id="@+id/job_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划"/>
    <Button
        android:id="@+id/timing_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看时间"/>
    <Button
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商店"/>
    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"/>


</LinearLayout>
    </LinearLayout>


