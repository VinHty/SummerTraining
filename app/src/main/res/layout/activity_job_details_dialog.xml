<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_job_details_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/activity_job_details_dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RadioGroup
         android:id="@+id/activity_job_details_dialog_radioGroup"
        android:contentDescription="是否设置提醒时间"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/activity_job_details_dialog_radioYes"
            android:text="是"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/activity_job_details_dialog_radioNo"
            android:text="否"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <DatePicker
        android:id="@+id/activity_job_details_dialog_datapicker"
        android:theme="@android:style/Theme.Holo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </DatePicker>

    <TimePicker
        android:id="@+id/activity_job_details_dialog_timepicker"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TimePicker>


</LinearLayout>